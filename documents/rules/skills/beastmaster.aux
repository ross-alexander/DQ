\@writefile{toc}{\contentsline {section}{\numberline {35}Beast Master (Ver 1.0)}{121}\protected@file@percent }
\newlabel{beastmaster}{{35}{121}}
\@writefile{toc}{\contentsline {subsection}{\numberline {35.1}Restrictions}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsubsection}{A breast master must have atleast 15 Willpower.}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsubsection}{A beast master may only train animals for their own personal use until they achieve Rank 5. They may domesticate animals at any Rank.}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsection}{\numberline {35.2}Benefits}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsubsection}{A beast master acquires the ability to train one type of animal and/or monster at Ranks 0, 5 and 10.}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsubsection}{A beast master must spend (12 - Rank) months to train an animal or monster, or a like number of weeks to domesticate one.}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsubsection}{A trained animal or monster must make a loyalty check whenever it recognises that its master is endangering it, or whenever its master commands an action that runs counter to its instincts.}{121}\protected@file@percent }
\newlabel{beastmaster:loyality}{{35.2}{121}}
\@writefile{toc}{\contentsline {subsubsection}{A domesticated creature must make a loyalty check if the circumstances described above arise.}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsubsection}{A beast master who intimidates their animals adds one to their Rank when calculating training or domestication time, but the GM adds 10 to any loyalty check dice-roll for one of their animals.}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsubsection}{A beast master may train or domesticate as many creatures as their Rank at one time.}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsection}{\numberline {35.3}Cost}{121}\protected@file@percent }
\@writefile{toc}{\contentsline {subsubsection}{A beast master must pay 100 Silver Pennies per creature trained and 25 Silver Pennies per creature domesticated.}{121}\protected@file@percent }
